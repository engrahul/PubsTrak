<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="vertical"
    tools:context="pubstrak.ahanaprods.com.pubstrak.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:text="Select an option"
        android:layout_height="wrap_content"
        android:id="@+id/tvUser"
        android:textStyle="normal|bold"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:lineSpacingExtra="8sp"
        android:textAlignment="viewEnd" />

    <Button
        android:layout_width="match_parent"
        android:text="Add User"
        android:layout_height="wrap_content"
        android:id="@+id/btAddUser"
        android:layout_below="@+id/tvUser"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:text="Modify User"
        android:layout_height="wrap_content"
        android:id="@+id/btModifyUser"
        android:layout_below="@+id/btAddUser"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:text="Add Prospect"
        android:layout_height="wrap_content"
        android:id="@+id/btAddProspect"
        android:layout_below="@+id/btModifyUser"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:text="Modify Prospect"
        android:layout_height="wrap_content"
        android:id="@+id/btModifyProspect"
        android:layout_below="@+id/btAddProspect"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:text="Assign Prospect to User"
        android:layout_height="wrap_content"
        android:id="@+id/btAssignProspect"
        android:layout_below="@+id/btModifyProspect"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:text="Appointments"
        android:layout_height="wrap_content"
        android:id="@+id/btAppointments"
        android:layout_below="@+id/btAssignProspect"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:text="Change Passowrd"
        android:layout_height="wrap_content"
        android:id="@+id/btChangePwd"
        android:layout_below="@+id/btAppointments"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:text="Logoff"
        android:layout_height="wrap_content"
        android:id="@+id/btLogOff"
        android:layout_below="@+id/btChangePwd"
        android:layout_alignParentStart="true" />

</RelativeLayout>
